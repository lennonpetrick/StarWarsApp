<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="AppTheme.ThemeToolbar" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="AppTheme.Text.Large" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>

    <style name="AppTheme.Text.Medium" parent="AppTheme.Text.Large">
        <item name="android:textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="AppTheme.Text.Small" parent="AppTheme.Text.Large">
        <item name="android:textAppearance">?android:textAppearanceSmall</item>
    </style>

    <style name="AppTheme.Title.Large" parent="android:Widget.TextView">
        <item name="android:textColor">@color/text_black</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AppTheme.Text.Info" parent="AppTheme.Text.Small">
        <item name="android:textStyle">bold</item>
    </style>

</resources>
